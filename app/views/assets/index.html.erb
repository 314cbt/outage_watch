<% content_for :title, "Assets" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-4xl">
    Assets</h1>
    <%= link_to "New asset", new_asset_path,
        class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div class="mt-4 mb-4"></div>

  <div id="assets" class="min-w-full space-y-5 mt-4">
    <% if @assets.any? %>
      <% @assets.each do |asset| %>
        <%= render asset %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No assets found.</p>
    <% end %>
  </div>
</div>
