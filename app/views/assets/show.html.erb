<% content_for :title, @asset.name %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl mb-4"><%= @asset.name %></h1>
  <div class="mb-4 flex flex-wrap gap-2">
    <%= link_to "Incidents for this asset", asset_incidents_path(@asset), 
          class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>

    <%= link_to "Work orders for this asset", asset_work_orders_path(@asset), 
          class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
  </div>

  <%= render @asset, hide_show: true %>

  <div class="mt-4 flex flex-wrap gap-2">
    <%= link_to "Edit this asset", edit_asset_path(@asset), 
          class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>

    <%= link_to "Back to assets", assets_path, 
          class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
  </div>
</div>