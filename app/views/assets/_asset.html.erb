<div id="<%= dom_id asset %>" class="card w-full sm:w-auto">
  <div class="card-body">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="font-semibold text-lg"><%= asset.name %></h2>
        <div class="mt-1 flex items-center gap-2">
          <%= status_badge(asset.status) if asset.status.present? %>
          <span class="badge badge-slate badge-sm"><%= asset.category.titleize %></span>
        </div>
      </div>
        <div class="flex gap-2">
          <% unless local_assigns[:hide_show] %>
            <%= link_to "Show", asset_path(asset),
                  class: "px-3 py-1 border-2 border-blue-600 text-blue-600 rounded-lg 
                          hover:bg-blue-600 hover:text-white transition-colors duration-200" %>
          <% end %>


          <%= link_to "Edit", edit_asset_path(asset),
              class: "px-3 py-1 border-2 border-green-600 text-green-600 rounded-lg font-medium 
                      hover:bg-green-600 hover:text-white transition-colors duration-200" %>

          <%= link_to "Destroy", asset_path(asset),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "px-3 py-1 border-2 border-red-600 text-red-600 rounded-lg font-medium 
                      hover:bg-red-600 hover:text-white transition-colors duration-200" %>
        </div>

    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4 text-sm text-gray-700">
      <div>
        <strong class="block font-medium mb-1">Latitude:</strong>
        <%= asset.latitude %>
      </div>
      <div>
        <strong class="block font-medium mb-1">Longitude:</strong>
        <%= asset.longitude %>
      </div>
      <div class="sm:col-span-2">
        <strong class="block font-medium mb-1">Metadata:</strong>
        <%= asset.metadata.presence || "â€”" %>
      </div>
    </div>
  </div>
</div>
