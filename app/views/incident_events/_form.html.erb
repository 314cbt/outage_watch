<%= form_with(model: incident_event, class: "contents") do |form| %>
  <% if incident_event.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(incident_event.errors.count, "error") %> prohibited this incident_event from being saved:</h2>

      <ul class="list-disc ml-6">
        <% incident_event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :incident_id %>
    <%= form.text_field :incident_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": incident_event.errors[:incident_id].none?, "border-red-400 focus:outline-red-600": incident_event.errors[:incident_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :kind %>
    <%= form.text_field :kind, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": incident_event.errors[:kind].none?, "border-red-400 focus:outline-red-600": incident_event.errors[:kind].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :occurred_at %>
    <%= form.datetime_field :occurred_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": incident_event.errors[:occurred_at].none?, "border-red-400 focus:outline-red-600": incident_event.errors[:occurred_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :message %>
    <%= form.text_area :message, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": incident_event.errors[:message].none?, "border-red-400 focus:outline-red-600": incident_event.errors[:message].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
