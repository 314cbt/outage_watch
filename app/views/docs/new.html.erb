<div class="mx-auto max-w-lg py-8">
  <h1 class="mb-4 text-xl font-semibold">Upload a document</h1>

  <%= form_with model: @doc, local: true, class: "space-y-4" do |f| %>
    <div>
      <label class="block text-sm font-medium mb-1">Title</label>
      <%= f.text_field :title, class: "w-full rounded-md border px-3 py-2", required: true %>
    </div>

    <div>
      <label class="block text-sm font-medium mb-1">Slug (e.g. business-plan)</label>
      <%= f.text_field :slug, class: "w-full rounded-md border px-3 py-2", required: true %>
    </div>

    <div>
      <label class="block text-sm font-medium mb-1">PDF file</label>
      <%= f.file_field :file, accept: "application/pdf", class: "block", required: true %>
    </div>

    <div class="flex items-center gap-3">
      <%= f.submit "Upload", class: "btn btn-focus-blue" %>
      <%= link_to "Cancel", docs_path, class: "text-sm text-gray-500 hover:underline" %>
    </div>
  <% end %>
</div>
