<% content_for :title, "Sign up" %>

<div class="mx-auto max-w-md py-10">
  <div class="card">
    <div class="card-body">
      <h1 class="text-2xl font-semibold">Create your account</h1>

      <%= render "shared/form_errors", object: resource %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="mt-4">
          <%= f.label :email, class: "block text-sm font-medium mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "input" %>
        </div>

        <div class="mt-4">
          <%= f.label :password, class: "block text-sm font-medium mb-1" %>
          <%= f.password_field :password, autocomplete: "new-password",
                class: "input" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-gray-500">Minimum <%= @minimum_password_length %> characters</p>
          <% end %>
        </div>

        <div class="mt-4">
          <%= f.label :password_confirmation, class: "block text-sm font-medium mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "input" %>
        </div>

        <div class="mt-6 flex gap-2">
          <%= f.submit "Create account", class: "btn btn-primary" %>
          <%= link_to "Cancel", root_path, class: "btn btn-ghost" %>
        </div>
      <% end %>

      <div class="mt-6 text-sm text-gray-600">
        Already have an account?
        <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
      </div>
    </div>
  </div>
</div>
