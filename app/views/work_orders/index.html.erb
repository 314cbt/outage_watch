<% content_for :title, "Work Orders" %>

<div class="w-full">

  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-4xl">
      Work Orders<%= " for #{@asset.name}" if @asset %>
    </h1>
    <% if @asset %>
      <%= link_to "New Work Order", new_asset_work_order_path(@asset),
          class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <% end %>
  </div>

  <div class="card">
    <div class="card-body p-0">
      <table class="table">
        <thead>
          <tr>
            <th>Asset</th>
            <th>Title</th>
            <th>Status</th>
            <th>Scheduled For</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @work_orders.each do |wo| %>
            <tr>
              <td>
                <%= wo.asset ? link_to(wo.asset.name, asset_path(wo.asset), class: "underline") : "—" %>
              </td>
              <td><%= wo.title %></td>
              <td><%= status_badge(wo.status) %></td>
              <td><%= wo.scheduled_for&.strftime("%Y-%m-%d %H:%M") || "—" %></td>
             <td class="text-right whitespace-nowrap">
              <div class="inline-flex gap-2">
                <%= link_to "Show", work_order_path(wo),
                  class: "px-3 py-1 border-2 border-blue-600 text-blue-600 rounded-lg font-medium
                          hover:bg-blue-600 hover:text-white transition-colors duration-200" %>

                <%= link_to "Edit", edit_work_order_path(wo),
                  class: "px-3 py-1 border-2 border-green-600 text-green-600 rounded-lg font-medium
                          hover:bg-green-600 hover:text-white transition-colors duration-200" %>

                <%= link_to "Destroy", work_order_path(wo),
                  data: { turbo_method: :delete, turbo_confirm: "Delete this work order?" },
                  class: "px-3 py-1 border-2 border-red-600 text-red-600 rounded-lg font-medium
                          hover:bg-red-600 hover:text-white transition-colors duration-200" %>
              </div>
            </td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
