<% content_for :title, "Showing incident" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-start justify-between">
    <div>
      <h1 class="font-bold text-4xl">Showing incident</h1>
      <div class="mt-2 flex items-center gap-2">
        <%= status_badge(@incident.status) %>
        <% if @incident.respond_to?(:severity) && @incident.severity.present? %>
          <%= severity_badge(@incident.severity) %>
        <% end %>
      </div>
    </div>

    <div class="text-sm text-gray-500 mt-2 sm:mt-0">
      Updated <%= time_ago_in_words(@incident.updated_at) %> ago
    </div>
  </div>

  <%= render @incident %>

  <div class="mt-4 flex flex-col sm:flex-row gap-2">
    <%= link_to "Edit this incident", edit_incident_path(@incident), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "Back to incidents", incidents_path, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Destroy this incident", @incident, method: :delete, form_class: "sm:inline-block", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
